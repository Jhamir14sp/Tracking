<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        app:srcCompat="@drawable/logo" />
    <LinearLayout
        android:id="@+id/users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Nombre: "
            />
        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            android:inputType="text"
            android:textSize="16dp"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/users2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/users">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Email: "
            />
        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:hint="Ingrese correo"
            android:inputType="textEmailAddress"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/users3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/users2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Contrase単a: "
            />
        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:hint="Ingrese contrase単a"
            android:inputType="textPassword"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/users4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/users3">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="50dp"
            android:text="Confirmar\ncontrase単a: "
            android:textSize="16dp" />
        <EditText
            android:id="@+id/txtPassword2"
            android:layout_marginTop="6dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Confirme contrase単a"
            android:inputType="textPassword"
            android:textSize="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/users4">
        <Button
            android:id="@+id/registar"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:background="#F9A31A"
            android:textColor="#ffff"
            android:text="Registrar"
            android:textSize="17dp"
            android:layout_marginTop="30dp"

            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/cancel"
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:background="#F9A31A"
            android:textColor="#FFFF"
            android:text="Cancelar"
            android:textSize="17dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>